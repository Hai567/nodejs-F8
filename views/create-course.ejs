<%- include("header") %>
    <div class="container" style="margin-top: 4em;">
        <h1>Create Course</h1>
        <form action="/course/store" method="POST" class="form-container">
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">Course Name</span>
                <input name="name" type="text" class="form-control" placeholder="Course Name" aria-label="Course Name">
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">Course Description</span>
                <textarea rows="4" name="description" type="text" class="form-control" placeholder="Course Description" aria-label="Course Description"></textarea>
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">Video ID</span>
                <input name="videoID" type="text" class="form-control" placeholder="Video ID" aria-label="Video ID">
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">Level</span>
                <input name="level" type="text" class="form-control" placeholder="Level" aria-label="Level">
            </div>
            <hr>
            <button class="create-course-submit" type="submit">Create</button>
        </form>
    </div>
<%- include("footer") %>